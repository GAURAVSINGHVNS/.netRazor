@model mvcrazor.Models.tblregistration
@{
    ViewBag.Title = "Registrationform";
}

<h2>Registrationform</h2>
@using (Html.BeginForm("InsertUser", "Registration", FormMethod.Post))
{
    <table>
        @Html.HiddenFor(x => x.rid)
        <tr>
            <td>Name :</td>
            <td>@Html.TextBoxFor(m => m.rname)</td>
        </tr>

        <tr>
            <td>Email Id :</td>
            <td>@Html.TextBoxFor(m => m.remail)</td>
        </tr>

        <tr>
            <td>Password :</td>
            <td>@Html.TextBoxFor(m => m.rpassword)</td>
        </tr>

        <tr>
            <td>Department :</td>
            <td>@Html.DropDownListFor(m => m.rdepartment, new SelectList(ViewBag.dpt, "did", "dname"), "--Select--")</td>
        </tr>

        <tr>
            <td>Country :</td>
            <td>@Html.DropDownListFor(m => m.rcountry, new SelectList(ViewBag.ctr, "cid", "cname"), "--Select--")</td>
        </tr>

        <tr>
            <td></td>
            <td><input type="submit" value="@ViewBag.BT" /></td>
        </tr>
    </table>
}

